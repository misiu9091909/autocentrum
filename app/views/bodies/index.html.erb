<p id="notice"><%= notice %></p>

<h1>Listing Bodies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Body type</th>
      <th>Start year</th>
      <th>End year</th>
      <th>Techspec</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bodies.each do |body| %>
      <tr>
        <td><%= body.name %></td>
        <td><%= body.link %></td>
        <td><%= body.body_type %></td>
        <td><%= body.start_year %></td>
        <td><%= body.end_year %></td>
        <td><%= body.techspec %></td>
        <td><%= link_to 'Show', body %></td>
        <td><%= link_to 'Edit', edit_body_path(body) %></td>
        <td><%= link_to 'Destroy', body, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

